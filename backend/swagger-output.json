{
  "swagger": "2.0",
  "info": {
    "title": "MyContacts",
    "description": "API de gestion des contacts sécurisée par token JWT",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Entrer le token JWT sous la forme : Bearer {token}"
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Créer un nouvel utilisateur",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "example": "John" },
                "lastName": { "example": "Doe" },
                "email": { "example": "john@example.com" },
                "password": { "example": "mypassword" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Inscription réussie" },
          "500": { "description": "Erreur serveur" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Connexion utilisateur et récupération du token JWT",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "john@example.com" },
                "password": { "example": "mypassword" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Connexion réussie" },
          "404": { "description": "Utilisateur non trouvé" },
          "500": { "description": "Erreur serveur" }
        }
      }
    },
    "/contacts": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Lister tous les contacts",
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": { "description": "Liste des contacts" },
          "401": { "description": "Non autorisé" },
          "500": { "description": "Erreur serveur" }
        }
      },
      "post": {
        "tags": ["Contacts"],
        "summary": "Créer un nouveau contact",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "example": "Jane" },
                "lastName": { "example": "Smith" },
                "phone": { "example": "0600000000" },
                "email": { "example": "jane@example.com" },
                "genre": { "example": "F" },
                "address": { "example": "123 Rue Exemple" },
                "postalCode": { "example": "75000" },
                "city": { "example": "Paris" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Contact créé" },
          "400": { "description": "Données invalides" },
          "401": { "description": "Non autorisé" },
          "500": { "description": "Erreur serveur" }
        }
      }
    },
    "/contacts/search": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Rechercher un contact",
        "security": [{ "Bearer": [] }],
        "parameters": [
          { "name": "query", "in": "query", "type": "string", "required": true }
        ],
        "responses": {
          "200": { "description": "Résultat de la recherche" },
          "400": { "description": "Requête invalide" },
          "401": { "description": "Non autorisé" },
          "500": { "description": "Erreur serveur" }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Récupérer un contact par ID",
        "security": [{ "Bearer": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Contact trouvé" },
          "401": { "description": "Non autorisé" },
          "404": { "description": "Non trouvé" },
          "500": { "description": "Erreur serveur" }
        }
      },
      "patch": {
        "tags": ["Contacts"],
        "summary": "Mettre à jour un contact",
        "security": [{ "Bearer": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "example": "Jane" },
                "lastName": { "example": "Smith" },
                "phone": { "example": "0600000000" },
                "email": { "example": "jane@example.com" },
                "genre": { "example": "F" },
                "address": { "example": "123 Rue Exemple" },
                "postalCode": { "example": "75000" },
                "city": { "example": "Paris" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Contact mis à jour" },
          "401": { "description": "Non autorisé" },
          "404": { "description": "Non trouvé" },
          "500": { "description": "Erreur serveur" }
        }
      },
      "delete": {
        "tags": ["Contacts"],
        "summary": "Supprimer un contact",
        "security": [{ "Bearer": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Contact supprimé" },
          "401": { "description": "Non autorisé" },
          "404": { "description": "Non trouvé" },
          "500": { "description": "Erreur serveur" }
        }
      }
    }
  }
}
